{
    "tasks": [
        {
        "type": "shell",
        "label": "C/C++: g++.exe build active file",
        "command": "D:\\MinGW\\bin\\g++.exe",
        "args": [
            "${fileDirname}/Platformer.cpp",
            "${fileDirname}/Collision.cpp",
            "-o",
            "${fileDirname}\\${fileBasenameNoExtension}.exe",
            "-static",
            "-static-libgcc",
            "-static-libstdc++",
            "-std=c++14",
            "-I",
            "D:/SFML-2.5.1-mingw/include",
            "-L",
            "D:/SFML-2.5.1-mingw/lib",
            "-L",
            "D:/SFML-2.5.1-mingw/include/",
            "-lsfml-system",
            "-lsfml-window",
            "-lsfml-graphics"
        ],
        "options": {
            "cwd": "${workspaceFolder}"
        },
        "problemMatcher": [
            "$gcc"
        ],
        "group": "build"
    }
],
    "version": "2.0.0"
}